# Shopify Environment Variables
# Copy this file to .env and fill in your values

# Development environment
SHOPIFY_PASSWORD=your_development_password
SHOPIFY_THEME_ID=your_development_theme_id
SHOPIFY_STORE_URL=your-store.myshopify.com

# Staging environment
SHOPIFY_STAGING_PASSWORD=your_staging_password
SHOPIFY_STAGING_THEME_ID=your_staging_theme_id

# Production environment
SHOPIFY_PRODUCTION_PASSWORD=your_production_password
SHOPIFY_PRODUCTION_THEME_ID=your_production_theme_id

# Optional settings
SHOPIFY_TIMEOUT=60s
SHOPIFY_PREVIEW_URL=https://your-store.myshopify.com 